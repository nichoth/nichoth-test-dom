{
  "compilerOptions": {
    "target": "es2022",
    "types": ["node"],
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["es2018", "dom", "DOM.Iterable"],
    "checkJs": true,
    "strict": false,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "maxNodeModuleJsDepth": 0,
    "paths": {
      "*" : ["./_types/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.js",
    "src/**/*.d.ts"
  ]
}
